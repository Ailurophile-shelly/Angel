<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/weather"
    tools:context="com.example.weather.WeatherActivity"
    android:orientation="vertical">
    <com.example.view.WFYTitle
    style="@style/wfy_title"
    app:centerText="Weather"
    app:leftImage="@drawable/back"
    app:leftIsBack="true"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_didian"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/didian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#F44336"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_high"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/high"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#F44336"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_di"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/low"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#F44336"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="15dp"
        android:paddingBottom="9dp"
        android:paddingTop="9dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/ic_tianqi"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tianqi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#F44336"/>
    </LinearLayout>

</LinearLayout>