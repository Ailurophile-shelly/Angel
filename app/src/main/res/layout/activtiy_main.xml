<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <com.example.view.WFYTitle
        android:id="@+id/wfy_title"
        style="@style/wfy_title"
        app:centerText="Angel"
        app:leftImage="@drawable/back"
        app:leftIsBack="true"
        app:rightImage="@drawable/fenxi"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:background="@drawable/backgroud"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:padding="8dp"
            android:background="@color/white"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_today"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回今天"
                android:textSize="14sp"
                android:textColor="@color/theme_color"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginRight="32dp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/iv_click_left_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/dym_nian_l"/>

                <TextView
                    android:id="@+id/tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginRight="3dp"
                    android:textColor="@color/theme_color"/>

                <ImageView
                    android:id="@+id/iv_click_right_month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:src="@drawable/dym_nian_r"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FEF2F6"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/theme_color"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="日"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="一"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="二"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:gravity="center"
                android:padding="5dp"
                android:text="三"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="四"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/gray_text"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="五"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textColor="@color/theme_color"
                android:textSize="12sp"
                android:padding="5dp"
                android:gravity="center"
                android:text="六"/>
        </LinearLayout>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.example.view.DateView
                android:id="@+id/date_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="3dp"
                android:background="@color/white"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:background="@drawable/period"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginLeft="3dp"
                    android:textColor="@color/theme_color"
                    android:text="月经期"/>

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/forecast"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/forecast"
                    android:layout_marginLeft="3dp"
                    android:text="预测期"/>

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="14dp"
                    android:background="@drawable/safety"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/safety"
                    android:layout_marginLeft="3dp"
                    android:text="安全期"/>

                <TextView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="16dp"
                    android:background="@drawable/risk"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/risk"
                    android:layout_marginLeft="3dp"
                    android:text="易孕期"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_mt_come"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:padding="12dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray_text"
                    android:text="姨妈来了"
                    android:drawableLeft="@drawable/dym_lai"
                    android:drawablePadding="3dp"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dym_xuan"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_mt_back"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:gravity="center_vertical"
                android:layout_marginTop="3dp"
                android:padding="12dp"
                android:visibility="gone"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/gray_text"
                    android:text="姨妈走了"
                    android:drawableLeft="@drawable/dym_zou"
                    android:drawablePadding="3dp"
                    android:textSize="12sp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/dym_xuan"/>
            </LinearLayout>
            <com.example.view.DegreeView
                android:id="@+id/dv_flow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:textName="流量"
                app:leImage="@drawable/dym_lai"
                app:virtualImage="@drawable/dym_liuliang2"
                app:factImage="@drawable/dym_liuliang"/>

            <com.example.view.DegreeView
                android:id="@+id/dv_pain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                app:textName="痛经"
                app:leImage="@drawable/dym_tong"
                app:virtualImage="@drawable/dym_tongjing2"
                app:factImage="@drawable/dym_tongjing"/>
        </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="0dp"
        android:layout_weight="0.4">
        <RadioGroup
            android:id="@+id/radiogroup"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:background="#DCDFC0">
            <RadioButton
                android:id="@+id/index"
                style="@style/BottomNavigationStyle"
                android:layout_marginTop="10dp"
                android:drawableTop="@drawable/ic_index"
                android:text="Home"/>
            <RadioButton
                android:id="@+id/weight"
                android:layout_marginTop="10dp"
                style="@style/BottomNavigationStyle"
                android:drawableTop="@drawable/ic_weightindex"
                android:text="Weight"/>
            <RadioButton
                android:id="@+id/weather"
                android:layout_marginTop="10dp"
                style="@style/BottomNavigationStyle"
                android:drawableTop="@drawable/ic_weatherindex"
                android:text="Weather"/>
        </RadioGroup>
    </LinearLayout>

</LinearLayout>
